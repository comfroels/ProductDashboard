<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<h1>Create a New Product</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<form action="/products" method="post">
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
				<div class="form-group">
					<label for="name">Name:</label>
					<input type="text" name="product[name]" placeholder="Name..." class="form-control">
				</div>
				<div class="form-group">
					<label for="description">Description:</label>
					<textarea name="product[description" cols="30" rows="3" placeholder="Description..." class="form-control"></textarea>
				</div>
				<div class="form-group">
					<label for="price">Price:</label>
					<input type="number" step="0.01" min="0" name="product[price]" class="form-control">
				</div>
				<div class="form-group">
					<label for="category">Category:</label>
					<select name="product[category_id]" class="form-control">
						<% @categories.each do |category| %>
							<option value="<%= category.id %>"><%= category.name %></option>
						<% end %>
					</select>
				</div>
				<button type="submit" class="btn btn-warning btn-block btn-lg">Create Product</button>
			</form>
			<br>
			<a href="/products/index" class="btn btn-default">Back</a>
		</div>
		<div class="col-md-4">
			<% @message.each do |message| %>
				<div class="alert alert-danger" role="alert"><%= message %></div>
			<% end %>
		</div>
	</div>
</div>